<Window x:Class="AtnennaSwitcher.ChangeBand"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AtnennaSwitcher"
        mc:Ignorable="d"
        Title="Change label" MaxHeight="200" MaxWidth="100" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock>Enter new label:</TextBlock>
        <TextBox Name="bandBox" Grid.Row="1" MinWidth="50"></TextBox>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,15,0,10">
            <Button IsDefault="True" Click="Accept_Click" MinWidth="60" Margin="0,0,10,10">OK</Button>
            <Button IsCancel="True" MinWidth="60">Cancel</Button>
        </WrapPanel>

    </Grid>
</Window>
